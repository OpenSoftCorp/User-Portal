@using System.Data;
@model System.Data.DataTable
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .fixTableHead {
        overflow: auto;
        height: 65vh;
    }

        .fixTableHead thead th {
            position: sticky;
            top: 0;
            background-color: #1e88e5;
            z-index: 1;
        }
</style>


<div id="divSpinner" style="display:none">
    @Html.Partial("ProgressSpinner")
</div>
<!-- -------------------------------------------------------------- -->
<!-- Bread crumb and right sidebar toggle -->
<!-- -------------------------------------------------------------- -->
<div class="row page-titles bg-white align-middle">
    <div class="col-md-5 col-12 align-self-center">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb font-22">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" asp-route-id="01000000" class="text-info"><i data-feather="home" class="feather-sm fill-white"></i></a></li>

                <li class="breadcrumb-item active text-info font-weight-medium"><a class="text-info">Approvals</a></li>

            </ol>
        </nav>
    </div>
    <div class="col-md-7 col-12 align-self-center d-none d-md-block">

    </div>
</div>

<!-- -------------------------------------------------------------- -->
<!-- End Bread crumb and right sidebar toggle -->

<div class="container-fluid">
    <div class="row">
        <div class="tab-content">
            <input type="hidden" id="Role" />
            <div class="card mb-2 w-100">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div style="border: .1px solid #D3D3D3; border-radius: 5px;" id="mydiv">
                                <table style="width:100%;">
                                    <tr>
                                        <td>
                                            <input type="text" id="txtGridSearch" class="form-control form-control-sm" placeholder="Search Grid" onkeyup="FilterGrid(this,TableSearch,DivMsg)" style="border:none !important">
                                        </td>
                                        <td>
                                            <a class="mdi mdi-magnify text-dark" style="font-size:13px"></a>
                                        </td>
                                    </tr>
                                </table>

                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="fixTableHead" id="Grid">
                            @{if (Model != null)
                                {
                                    <table id="TableSearch" class="table table-striped table-bordered  table-hover bg-white">
                                        <thead class="bg-light-info text-dark fixed-table-header">
                                                                        <tr>
                                                                            @{
                                                                                foreach (DataColumn Dc in Model.Columns)
                                                                                {
                                                                                    <th style="font-family:Verdana;font-size:10px;font-weight:bold">@Dc.ColumnName</th>
                                                                                }
                                                                                <th style="font-family:Verdana;font-size:10px;font-weight:bold">Info</th>

                                                                            }

                                                                        </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                int RowIndex = 1;

                                                foreach (DataRow DataRow in Model.Rows)
                                                {
                                                    <tr>
                                                        @foreach (DataColumn dc in Model.Columns)
                                                        {
                                                            <td>
                                                                <label style="font-family:Verdana;font-size:10px;color:black" onclick="GridRowClick(@RowIndex)">@DataRow[@dc.ColumnName].ToString()</label>
                                                            </td>

                                                        }
                                                    <td>
                                                        <input type="button" class="btn-info" value="Info" data-bs-toggle="modal" data-bs-target="#success-header-modal">

                                                    </td>
                                                        @{
                                                            RowIndex = RowIndex + 1;
                                                        }
                                                    </tr>
                                                }
                                            }
                                        </tbody>

                                    </table>
                                }
                            }
                        </div>
                        <div class="row mt-1" align="center">
                            <label id="DivMsg"></label>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>


<div class="modal fade" id="success-header-modal" tabindex="-1" aria-labelledby="bs-example-modal-lg" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header d-flex modal-colored-header bg-info text-white align-items-center">
                <h8 class="modal-title" id="success-header-modalLabel">
                    <label>Sales Order Dates Approval</label>
                </h8>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria- label="Close"></button>
            </div>
            <div class="modal-body" id="SearchContentDiv" style="height:350px !important">

            </div>
            <div class="modal-footer">
                <button type="button" id="SearchPopUpClose" class="btn btn-light-info text-info font-weight-medium" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@if (ViewBag.Error != null)
{
    <script type="text/javascript">

        window.onload = function () {


           toastr.error('"@ViewBag.Error"', 'Oops..', { "closeButton": true });

        };
    </script>
}
@if (ViewBag.Message != null)
{
    <script type="text/javascript">

        window.onload = function () {

           toastr.info('"@ViewBag.Message"', 'Oops..', { "closeButton": true });

        };
    </script>
}